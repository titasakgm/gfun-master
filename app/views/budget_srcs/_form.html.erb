<%= simple_form_for(@budget_src) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.label "ชื่อแหล่งงบประมาณ" %><br />
    <%= f.text_field :title, :size => 60 %>
  </div
  <div class="inputs">
    <%= f.label "คำอธิบาย" %><br />
    <%= f.text_area :description, :rows => 3 %>
  </div>
  <div class="actions">
    <%= f.button :submit, :value => "บันทึก" %>
  </div>
<% end %>
